{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Map",
    "description": "Map created from custom tiles",
    "type": "object",
    "properties": {
        "id": {
            "description": "The unique identifier for custom tile map",
            "type": "integer"
        },
        "name": {
            "description": "Name of a custom tile map",
            "type": "string"
        },
        "description": {
            "description": "Description for custom tile map",
            "type": "string"
        },
        "path": {
            "description": "path_to_tiles",
            "type": "string"
        },
        "maxZoom": {
            "description": "Maximum zoom level",
            "type": "integer"
        },
        "minZoom": {
            "description": "Minimum zoom level",
            "type": "integer",
            "minimum": 0
        },
        "metadata": {
            "description": "Metadata for this custom tile map",
            "type": "object",
            "properties": {
                "created": {
                    "description": "creation date",
                    "type": "string"
                },
                "creator": {
                    "description": "creator user name",
                    "type": "string"
                }
            },
            "required": ["created", "creator"]
        }
    },
    "required": ["id", "name", "path", "maxZoom", "minZoom", "metadata"]
}

