{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "POI",
    "description": "Point of interest",
    "type": "object",
    "properties": {
        "id": {
            "description": "The unique identifier for this POI",
            "type": "integer"
        },
        "name": {
            "description": "Name of POI",
            "type": "string"
        },
        "description": {
            "description": "POI description",
            "type": "string"
        },
        "category": {
            "description": "API path to category",
            "type": "string"
        },
        "coordinates": {
            "description": "Coordinates of POI object",
            "type": "object",
            "properties": {
                "lat": {
                    "description": "Latitude of POI object",
                    "type": "integer"
                },
                "long": {
                    "description": "Longitude of POI object",
                    "type": "integer"
                }
            },
            "required": ["lat", "long"]
        },
        "link": {
            "description": "Url to the article, photo, video etc. connected with this POI",
            "type": "string"
        },
        "photo": {
            "description": "Url to the photo connected with this POI",
            "type": "string"
        },
        "metadata": {
            "description": "Metadata for this POI",
            "type": "object",
            "properties": {
                "created": {
                    "description": "creation date",
                    "type": "string"
                },
                "edited": {
                    "description": "last edition date",
                    "type": "string"
                },
                "creator": {
                    "description": "creator user name",
                    "type": "string"
                },
                "editor": {
                    "description": "last editor user name",
                    "type": "string"
                }
            },
            "required": ["created", "edited", "creator", "editor"]
        }
    },
    "required": ["id", "name", "category", "map", "coordinates", "metadata"]
}